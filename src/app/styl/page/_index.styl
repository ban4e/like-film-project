.news
	.col_last_project_title
		span
			color secondColor
			text-transform uppercase
			text-align center
			font-size 2rem

.col_last_project_title
	height 134px
	display flex
	justify-content center
	align-items center
	
.genre_wrap
	border-top 1px solid brdrColor
	border-bottom 1px solid brdrColor
	margin-bottom 36px

.genre_ham_mnu
	display none
	line-height 52px

.genre_ul
	display flex
	flex-direction row
	justify-content space-between
	align-items center
	border-left 1px solid brdrColor
	border-right 1px solid brdrColor

.genre_item
	position relative
	display flex
	align-items center
	justify-content center
	width 100%
	&:before
		content ""
		position absolute
		height 24px
		width 1px
		right 0
		top 50%
		margin-top -12px
		background brdrColor
	a
		line-height 52px
		width 100%
		text-align center
		color #515862
		&:hover
			color secondColor
			
.active_genre
	background-color secondColor
	&:before
		content ""
		width 0px
		height 0px
	a, a:hover
		color #fff

.genre_ul			
	.sub_menu_button
		position relative
		&:before
			content ""
			width 0px
			height 0px

.sub_menu
	position absolute
	top 53px
	background-color orangeColor
	width 100%
	text-align left
	display none
	z-index 1

.sub_menu_item
	position relative
	a
		color #fff
		display block
		text-align left
		position relative
		padding-left 15px
		&:before
			content ""
			position absolute
			height 1px
			width 80%
			margin 0 auto
			bottom 0
			background-color rgba(255,255,255,0.2)
		&:after
			content ""
			position absolute
			height 100%
			width 100%
			top 0
			left 0
			background linear-gradient(to right, orangeColor, orangeColor, white)
			opacity 0.2
			visibility hidden
			
.genre_ul
	.sub_menu_button:hover ul
		display block
			
.sub_menu_item
	a:hover
		color #fff
		&:after
			visibility visible

.active_sub
	background repeating-linear-gradient(-45deg, rgba(249, 133, 97, 1), rgba(249, 133, 97, 1) 14px, rgba(255, 255, 255, 0.2) 14px, rgba(255, 255, 255, 0.2) 15px)

.fa-caret-down
	padding-left 5px
	
.film_card
	display flex
	flex-direction column
	justify-content center
	align-items center
	margin-bottom 35px

.film_img
	overflow-y hidden
	position relative
	width 308px
	background-color #fff
	border-radius 3px
	box-shadow 1px 1px 5px 2px #999
	&:before
		content ""
		position absolute
		height 1px
		width 100%
		bottom 40px
		background brdrColor
		
	
.image_to_film
	cursor pointer
	position relative
	overflow hidden
	img
		height calc(223px + 15px)
		width calc(100% + 15px)
		transform translate(-15px,0px)
		transition all 0.15s linear 0s
		
.film_text
	padding 10px 20px 10px 20px
	width 100%
	background-color #fff
	line-height 1
	.fa
		padding-right 5px
	a
		font-size 16px
		display block
		cursor pointer
		margin-bottom 8px
		&:hover
			text-decoration underline
	span
		font-size 14px
		display block
		margin-bottom 20px
	article
		display inline-block
		font-size 14px

.film_text_bottom
	display flex
	align-items center
	justify-content space-between
	
.stars-svg
	cursor pointer
	&:hover .star polygon
		fill #ffd055 !important
.star
	float left
	polygon
		fill #d8d8d8
		stroke black
		stroke-width 1
		transform translate(0px,1px)
	&:hover ~ .star polygon
		fill #d8d8d8 !important
		
&[data-stars]
	.star polygon
		fill #FD4

&[data-stars="1"]
	.star:nth-child(1) ~ .star polygon
		fill #d8d8d8

&[data-stars="2"]
	.star:nth-child(2) ~ .star polygon
		fill #d8d8d8

&[data-stars="3"]
	.star:nth-child(3) ~ .star polygon
		fill #d8d8d8

&[data-stars="4"]
	.star:nth-child(4) ~ .star polygon
		fill #d8d8d8

&[data-stars="5"]
	.star:nth-child(5) ~ .star polygon
		fill #d8d8d8


