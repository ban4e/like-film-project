.caption
	position absolute
	top 0px
	left 0px
	height 100%
	width 100%
	text-align center
	color white
	h4
		margin 10px auto 0px auto
		background rgba(0,0,0,0.7)
		font-weight 400
		text-transform uppercase
		font-size 22px
		padding 6px 0px
		position relative
		top -200px
		transition all 0.2s cubic-bezier(0.41, 1.43, 0.19, 0.79) 0s
		&:before
			content ""
			width 0px
			height 0px
			display block
			border 20px solid transparent
			border-top 20px solid rgba(0,0,0,0.7)
			position absolute
			top 100%
			left 50%
			margin-left -20px
	p
		width 100%
		max-width calc(90% - 20px)
		margin 30px auto 0px auto
		background rgba(0,0,0,0.8)
		font-weight 400
		padding 6px 10px
		font-size 14px
		position relative
		top -250px
		transition all 0.2s cubic-bezier(0.41, 1.43, 0.19, 0.79) 0s
	a
		display inline-block
		margin 10px auto 0px auto
		background-color orangeColor
		color inherit
		padding 7px 20px
		font-size 14px
		box-shadow inset 0px 0px 7px 1px rgba(0,0,0,0.3)
		border-radius: 5px
		top -300px
		position relative
		transition all 0.2s cubic-bezier(0.41, 1.43, 0.19, 0.79) 0s
		
.image_to_film:hover img
	transform translate(0,0)

.image_to_film:hover .caption h4
		transition-delay 0.6s
.image_to_film:hover .caption p
		transition-delay 0.4s
.image_to_film:hover .caption a
	transition-delay 0.2s
.image_to_film:hover .caption h4, .image_to_film:hover .caption p, .image_to_film:hover .caption a
	top 0px

.pagination
	justify-content center
	margin-bottom 40px
	a
		color white
		margin-right 8px
.pages
	display block
	position relative
	width 30px
	height 30px
	border-radius 3px
	background-color #aaaaaa
	text-align center
	&:before, &:after
		content ""
		width 1px
		height 0
		position absolute
		transition all 0.2s linear
		background #515862
		transition-delay .2s
	&:hover::before, &:hover::after
		height 100%
	span
		display block
		width 100%
		height 100%
		&:before, &:after
			content ""
			width 0
			height 1px
			position absolute
			transition all 0.2s linear
			background #515862
			transition-delay 0s
		&:hover::before, &:hover::after
			width 100%

	
.pages:before
	top 0
	right 0
.pages:after
	bottom 0
	left 0
.pages span:before
	top 0
	right 0
.pages span:after
	bottom 0
	left 0
.current_page
	background-color secondColor
.prev_next
	background-color secondColor
	border-radius 3px
	padding 0 5px 0 5px
	&:hover
		text-decoration underline


.about_wrap
	border-top 1px solid brdrColor
	padding-top 32px

.about_title
	display flex
	justify-content center
	margin-bottom 32px
	span
		color secondColor
		text-transform uppercase
		text-align center
		font-size 24px

.about_text
	text-align center
	padding 0 80px 0 80px
	margin-bottom 32px
	

@keyframes bounceInDown
	0%
		opacity 0
		transform translateY(-200px)
	60%
		opacity 1
		transform translateY(30px)
	80%
		transform translateY(-10px)
	100%
		transform translateY(0)

.bounceInDown
	animation-name bounceInDown
	animation-duration .5s
	
@keyframes bounceOutUp
	0%
		transform translateY(0)
	20%
		opacity 1
		transform translateY(20px)
	100%
		opacity 0
		transform translateY(-200px)
.bounceOutUp
	animation-name bounceOutUp
	animation-duration .5s