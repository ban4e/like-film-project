@media screen and (max-width: 1200px)
	.footer_contacts
		padding 32px 0 0 0px

@media screen and (max-width: 991px)
	.navbar
		padding 0 30px 0 30px
	.navbar-nav
		.nav-item
			text-align center
			.nav-link
				box-sizing border-box
				margin-left 10px
			&.active
				background-color transparent
				position relative
				&:before
					content ""
					position absolute
					width 100%
					height 30px
					top 50%
					left 0
					margin-top -15px
					border solid 3px #0080b7
				&:after
					content ""
					display none
				span
					color black
	.navbar-toggler
		border none
		right 30px
	.menu
		padding 0 30px
	.menu_ul
		display none
	.hamburger
		display block
	.responsive
		display flex
		flex-direction column
		background-color mainColor
		position absolute
		width inherit
		z-index 100
		top 70px
		left 0
		animation-name bounceInDown
		animation-duration 0.8s
	.active::after
		border none
		
	@keyframes bounceInDown
		0%
			opacity 0
			transform translateY(-200px)
		60%
			opacity 1
			transform translateY(30px)
		80%
			transform translateY(-10px)
		100%
			transform translateY(0)


	.genre_ham_mnu
		display block
		text-align center

	.genre_ul	
		display flex
		flex-direction column-reverse
		transition all 0.2s cubic-bezier(0.41, 1.43, 0.19, 0.79) 0s
		display none
	.genre_item
		&:before
			content ''
			width 0px
			height 0px


	.feedback
		display flex
		flex-direction column
	.footer_contacts_wrap
		display flex
		flex-direction row
		justify-content space-between
	.footer_col:not(:last-child)
		margin-bottom 20px
	.footer_contacts
		padding 0

@media screen and (max-width: 576px)
	.footer_contacts_wrap
		display flex
		flex-direction row
		justify-content space-around
		flex-wrap wrap
	.footer_contacts
		padding 10px
	.film_img
		width calc(100% - 10px)
		max-width 308px
